<%- include('../partials/header') %>
    <h1>Your Repair Requests</h1>

    <div>
        <% if (requests.length === 0) { %>
            <h2>No Repairs Yet</h2>
        <% } else { %>
            <% requests.forEach(repair => { %>
                <div>
                    <h3><%= repair.vehicle_name %></h3>
                    <p><%= repair.description %></p>
                    <h2><%= repair.status %></h2>
                </div>
            <% }) %>
        <% } %>
        <a href="/repair/create">Create Repair Request</a>
    </div>
<%- include('../partials/footer') %>