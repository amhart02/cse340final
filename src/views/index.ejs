<%- include('partials/header') %>
<h1>Featured Vehicles</h1>
<div class="vehicle-grid">
<% featuredVehicles.forEach(vehicle => { %>
    <div class="vehicle-card">
        <a href="/category/<%= vehicle.category_id %>/<%= vehicle.id %>"><img src="<%= vehicle.image %>" alt="<%= vehicle.name %>"></a>
        <section>
            <div>
                <a href="/category/<%= vehicle.category_id %>/<%= vehicle.id %>"><%= vehicle.name %> </a>
                <h3>Price: <span>$<%= Number(vehicle.price).toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></span></h3>
            </div>
            <button>
                <a href="/category/<%= vehicle.category_id %>/<%= vehicle.id %>">View Car</a>
            </button>
        </section>
    </div>
<% }) %>
</div>
<div class="categories-list">
    <h2>Categories</h2>
    <ul class="category-list">
        <% categories.forEach(category => { %>
            <li><a href="/category/<%= category.slug %>"><%= category.name %></a></li>
        <% }) %>
    </ul>
</div>

<%- include('partials/footer') %>