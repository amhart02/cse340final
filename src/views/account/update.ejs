<%- include('../partials/header') %>
    <h1>Update Your Account</h1>

    <% if (update == "email") { %>
    <form action="/account/update/email" method="POST" class="account-update-form">
        <div class="form-group">
            <label for="newEmail">New Email Address:</label>
            <input
                type="email"
                id="newEmail"
                name="newEmail"
                required
                maxlength="255"
                placeholder="Enter your new email address"
            >
        </div>

        <div class="form-group">
            <label for="confirmEmail">Confirm New Email Address:</label>
            <input
                type="email"
                id="confirmEmail"
                name="confirmEmail"
                required
                maxlength="255"
                placeholder="Confirm your new email address"
            >
        </div>

        <input type="hidden" name="update" value="email">

        <div class="form-actions">
            <button type="submit">Update</button>
        </div>
    </form>
    <% } else { %>
    <form action="/account/update/password" method="POST" class="account-update-form">
        <div class="form-group">
            <label for="newPassword">New Password:</label>
            <input
                type="password"
                id="password"
                name="newPassword"
                required
                minlength="6"
                placeholder="Enter your new password"
            >
        </div>
        
        <div class="form-group">
            <label for="confirmPassword">Confirm New Password:</label>
            <input
                type="password"
                id="password"
                name="confirmPassword"
                required
                minlength="6"
                placeholder="Confirm your new password"
            >
        </div>

        <input type="hidden" name="update" value="password">

        <div class="form-actions">
            <button type="submit">Update</button>
        </div>
    </form>
    <% } %>

<%- include('../partials/footer') %>