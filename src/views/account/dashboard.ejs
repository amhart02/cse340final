<%- include('./partials/header') %>
    <h1>Account Dashboard</h1>
    
    <div class="dashboard-welcome">
    <h2>Welcome back!</h2>
</div>

<!-- user:
    user info
    view/edit/delete reviews
    update account information
-->

<!-- employee: 
    user info
    edit vehicle information
    manage vehicle reviews
    view and update repair service requests
-->

<!-- owner:
    user info
    add/update/delete vehicles and categories
    view messages 
-->

<div class="dashboard-content">
    <section class="account-info">
        <h3>Account Information</h3>
        <p><strong>Email:</strong> <%= user.email %></p>
        <p><strong>Role:</strong> <%= user.role_name %></p>
        <p><strong>Session Status:</strong> Active</p>
    </section>

    <section class="dashboard-actions">
        <h3>Quick Actions</h3>
        <ul>
            <% if ( user.role_name === "management") { %>
                <li><a href="/vehicleManage">Manage Vehicles</a></li>
                <li><a href="/vehicleCategories">Manage Categories</a></li>
                <li><a href="/messages">View Messages</a></li>
            <% } else if (user.role_name === "employee") { %>
                <li><a href="/editVehicle">Edit Vehicles</a></li>
                <li><a href="/manageReviews">Manage Reviews</a></li>
                <li><a href="/viewRequests">View Service Requests</a></li>
            <% } else { %>
                <li><a href="/accountUpdate">Update Account</a></li>
            <% } %>
        </ul>
    </section>
</div>

    <div class="logout-section">
        <form action="/account/logout" method="POST" class="logout-form">
            <button type="submit" class="logout-button">Logout</button>
        </form>
    </div>
<%- include('./partials/footer') %>